<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000010"
    tools:context=".screen.HomeTenantActivity">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivLogOut"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/description_ic_menu"
            android:src="@drawable/ic_logout" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/properties"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/description_ic_home"
            android:src="@drawable/ic_home" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMyProperties"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/my_properties"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_my_properties"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/ivAddProperty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llHeader" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05C8F4"
        android:text="@string/my_properties"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivMyProperties"
        app:layout_constraintStart_toStartOf="@id/ivMyProperties"
        app:layout_constraintEnd_toEndOf="@id/ivMyProperties" />

    <ImageView
        android:id="@+id/ivAddProperty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/add_property"
        android:background="@drawable/ic_add_property"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/ivMyProperties"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llHeader"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05C8F4"
        android:text="@string/add_property"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivAddProperty"
        app:layout_constraintStart_toStartOf="@id/ivAddProperty"
        app:layout_constraintEnd_toEndOf="@id/ivAddProperty" />

    <ImageView
        android:id="@+id/ivDeleteProperty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_delete_property"
        android:contentDescription="@string/delete_property"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/ivEditProperty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivAddProperty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05C8F4"
        android:text="@string/delete_property"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivDeleteProperty"
        app:layout_constraintStart_toStartOf="@id/ivDeleteProperty"
        app:layout_constraintEnd_toEndOf="@id/ivDeleteProperty" />

    <ImageView
        android:id="@+id/ivEditProperty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_edit_property"
        android:contentDescription="@string/edit_property"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivDeleteProperty"
        app:layout_constraintTop_toBottomOf="@id/ivAddProperty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#05C8F4"
        android:text="@string/edit_property"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ivEditProperty"
        app:layout_constraintStart_toStartOf="@id/ivEditProperty"
        app:layout_constraintEnd_toEndOf="@id/ivEditProperty" />

</androidx.constraintlayout.widget.ConstraintLayout>