<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvPropertyTenantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivPropertyTenantInformation"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/information"
        android:src="@drawable/ic_information" />

    <ImageView
        android:id="@+id/ivExcludeFromProperty"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/exclude_from_property"
        android:src="@drawable/ic_exclude_from_room" />

</LinearLayout>